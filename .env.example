# AutoStack Environment Configuration
# Copy this file to .env and update values as needed

# API Ports
INVENTORY_PORT=8001
VALUATIONS_PORT=8002
WEB_PORT=3000

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production

# API URLs (for web app)
VITE_API_INVENTORY_URL=http://localhost:8001
VITE_API_VALUATIONS_URL=http://localhost:8002

# CloudBees Feature Management
# Set to 'local-mode' for development without CloudBees FM
# Or provide your CloudBees FM API key for production
VITE_FM_KEY=local-mode

# Data Configuration (in-memory from JSON files)
DATA_PATH=/app/data/seed

# Development Settings
NODE_ENV=development
GO_ENV=development
